/*  1 ile 100 arasından rastgele üretilen 20 adet sayıyı bir bağlı listeye ekleyen ve ekleme yaparken Rastgele üretilen sayı eğer bağlı listede var ise bu sayı bağlı listeye eklemeyerek yeni bir sayı üretilmesini sağlayan programı yazınız? /*


import java.util.LinkedList;
import java.util.Random;

public class ManuelKontrolListe {
    public static void main(String[] args) {
        LinkedList<Integer> liste = new LinkedList<>();
        Random rastgele = new Random();

        while (liste.size() < 20) {
            int uretilenSayi = rastgele.nextInt(100) + 1;
            
            // Bayrak (Flag) mantığı: Sayının listede olup olmadığını tutar
            boolean varMi = false;

            // Listeyi manuel olarak geziyoruz (contains yerine)
            for (int i = 0; i < liste.size(); i++) {
                if (liste.get(i) == uretilenSayi) {
                    varMi = true; // Sayı bulundu
                    break;        // Döngüden çık, aramaya devam etme
                }
            }

            // Eğer sayı listede yoksa ekle
            if (varMi == false) {
                liste.add(uretilenSayi);
            }
            // Sayı varsa if bloğuna girmez, while döngüsü yeni sayı üretir.
        }

        // Listeyi yazdır
        System.out.println("20 Benzersiz Sayı (Manuel Kontrol ile):");
        System.out.println(liste);
    }
}
